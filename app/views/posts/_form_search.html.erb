
  <nav class="panel">
    <p class="panel-heading">
      投稿検索
    </p>
    <div class="panel-block" style="background-color: white">
      <%= search_form_for(@search, url: search_path) do |f| %>
        <div class="field">

            <div class="field">
              <div class="control">
                <%= f.text_field :body_cont, class: 'form-control input', style: 'width: 200px', placeholder: 'キーワード' %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <label class="radio">
                  <%= f.radio_button 'item', '1', {checked: true} %> 投稿内容
                </label>
                <label class="radio">
                  <%= f.radio_button 'item', '2', {checked: false} %> 投稿者
                </label>
                <label class="radio">
                  <%= f.radio_button 'item', '3', {checked: false} %> 画像内文字
                </label>
              </div>
            </div>

        </div>
        <%= f.submit '検索', class: 'button is-link' %>
      <% end %>
    </div>
  </nav>

